<aura:component implements="flexipage:availableForRecordHome,force:hasRecordId,force:hasSObjectName"  controller="RelatedListController">
    
    <aura:attribute name="sobjectList"  type="List"/>
    <aura:handler name="init" value="{!this}" action="{!c.fetchPlateCurrentAction}" />

    <div class="slds-page-header slds-text-title--caps"> Current Vehicle </div>

    <ui:message aura:id="idMessage" class="slds-hide"  title="Information" severity="info" >
        No Records Found.
    </ui:message>    
   
    <table class="{!v.sobjectList.length>0?'slds-table slds-table--bordered slds-table--cell-buffer':'slds-hide'}">
        <thead>
            <tr class="slds-text-title--caps">
              <th scope="col">
                    <div class="slds-truncate" >Vehicle</div>
              </th>
              <th scope="col">
                    <div class="slds-truncate" >Vehicle Year</div>
              </th>
              <th scope="col">
                <div class="slds-truncate" >Vehicle Make</div>
              </th>
              <th scope="col">
                <div class="slds-truncate" >Vehicle Model</div>
              </th>                
              <th scope="col">
                <div class="slds-truncate" >Vehicle Colour</div>
              </th>
            </tr>
      </thead> 
      <tbody>
      <aura:iteration items="{!v.sobjectList}" var="v" >
            <tr class="slds-text-title--caps">
               <td >
                   <a href="{!'/one/one.app?#/sObject/'+ v.Id+ '/view'}" >{!v.Name}</a>
               </td> 
               <td >
                <ui:outputText value="{!v.Year_Made__c}"/>
               </td>
               <td >
                <ui:outputText value="{!v.Vehicle_Make__c}"/>
               </td>
               <td >
                <ui:outputText value="{!v.Vehicle_Model__c}"/>
               </td>                
               <td >
                <ui:outputDate value="{!v.Vehicle_Colours__c}"/>
               </td>
            </tr>
        </aura:iteration>
       </tbody>      
    </table>
</aura:component>