<aura:component implements="flexipage:availableForRecordHome,force:appHostable,force:hasRecordId,force:hasSObjectName"  controller="RelatedListController">
    
    <aura:attribute name="sobjectList"  type="List"/>
    <aura:handler name="init" value="{!this}" action="{!c.fetchOwnersAction}" />

    <div class="slds-page-header slds-text-title--caps"> Person(s) </div>

    <ui:message aura:id="idMessage" class="slds-hide"  title="Information" severity="info" >
        No Records Found.
    </ui:message>    
    
    <table class="{!v.sobjectList.length>0?'slds-table slds-table--bordered':'slds-hide'}">
        <thead>
            <tr class="slds-text-title--caps">
              <th scope="col">
                    <div class="slds-truncate" >Name</div>
              </th>
              <th scope="col">
                <div class="slds-truncate">Title</div>
              </th>  
              <th scope="col">
                <div class="slds-truncate">Role(s)</div>
              </th>                 
              <th scope="col">
                    <div class="slds-truncate" >City</div>
              </th>
              <th scope="col">
                <div class="slds-truncate" >Phone</div>
              </th>
              <th scope="col">
                <div class="slds-truncate" >Mobile</div>
              </th>
              <th scope="col">
                <div class="slds-truncate" >email</div>
              </th>              
              <th scope="col">
                <div class="slds-truncate" >Drivers Licence</div>
              </th>                       
            </tr>   
      </thead> 
      <tbody>
      <aura:iteration items="{!v.sobjectList}" var="v" >
            <tr class="slds-text-title--caps">
               <td >
                   <a href="{!'/one/one.app?#/sObject/'+ v.Id + '/view'}" >{!v.Name}</a>
               </td>
               <td >
                  <ui:outputText value="{!v.Title}"/>
               </td> 
               <td >
                  <ui:outputText value="{!v.Roles__c}"/>
               </td> 
                <td>
                   <ui:outputText value="{!v.OtherCity}"/>
               </td>
               <td >
                  <ui:outputText value="{!v.Phone}"/>
               </td> 
               <td>
                   <ui:outputPhone value="{!v.MobilePhone}"/>
               </td>
               <td>
                   <ui:outputEmail value="{!v.Email}"/>
               </td>
               <td>
                   <ui:outputText value="{!v.Driver_Licence_Number__c}"/>
               </td>                
          </tr>
        </aura:iteration>
       </tbody>      
    </table>
    
</aura:component>